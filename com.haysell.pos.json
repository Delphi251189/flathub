{
    "id":"com.haysell.pos",
    "runtime":"org.kde.Platform",
    "runtime-version":"5.15-23.08",
    "sdk":"org.kde.Sdk",
    "command":"haysell-pos",
    "finish-args":[
      "--share=ipc",
      "--share=network",
      "--socket=fallback-x11",
      "--socket=wayland",
      "--device=dri",
      "--socket=pulseaudio",
      "--filesystem=host"
    ],
    "cleanup":[
      "/include",
      "*.la",
      "*.a"
    ],
    "modules":[
      {
        "name":"haysell-pos",
        "buildsystem":"cmake-ninja",
        "sources":[
          {
            "type":"git",
            "url":"https://github.com/Delphi251189/haysell-pos.git",
            "commit" : "fa8490b536bee11345e30392a3e6de8f0e8b4ea7"
          }
        ],
        "post-install": [
            "mkdir -p /app/share/metainfo",
            "mkdir -p /app/share/applications",
            "mkdir -p /app/share/icons/hicolor/256x256/apps",
            "mkdir -p /app/share/icons/hicolor/128x128/apps",
            "mkdir -p /app/share/icons/hicolor/64x64/apps",
            "mkdir -p /app/share/icons/hicolor/48x48/apps",
            "mkdir -p /app/share/icons/hicolor/36x36/apps",
            "mkdir -p /app/share/icons/hicolor/32x32/apps",
            "mkdir -p /app/share/icons/hicolor/24x24/apps",
            "mkdir -p /app/share/icons/hicolor/22x22/apps",
            "mkdir -p /app/share/icons/hicolor/20x20/apps",
            "mkdir -p /app/share/icons/hicolor/16x16/apps",
            "install -Dm0644 flatpak/com.haysell.pos.metainfo.xml /app/share/metainfo/com.haysell.pos.metainfo.xml",
            "cp -f ./flatpak/com.haysell.pos.desktop      /app/share/applications/com.haysell.pos.desktop",
            "install -Dm0644 libs/haysell/Icons/logo/256x256.png /app/share/icons/hicolor/256x256/apps/com.haysell.pos.png",
            "cp -f ./libs/haysell/Icons/logo/128x128.png  /app/share/icons/hicolor/128x128/apps/com.haysell.pos.png",
            "cp -f ./libs/haysell/Icons/logo/64x64.png    /app/share/icons/hicolor/64x64/apps/com.haysell.pos.png",
            "cp -f ./libs/haysell/Icons/logo/48x48.png    /app/share/icons/hicolor/48x48/apps/com.haysell.pos.png",
            "cp -f ./libs/haysell/Icons/logo/36x36.png    /app/share/icons/hicolor/36x36/apps/com.haysell.pos.png",
            "cp -f ./libs/haysell/Icons/logo/32x32.png    /app/share/icons/hicolor/32x32/apps/com.haysell.pos.png",
            "cp -f ./libs/haysell/Icons/logo/24x24.png    /app/share/icons/hicolor/24x24/apps/com.haysell.pos.png",
            "cp -f ./libs/haysell/Icons/logo/22x22.png    /app/share/icons/hicolor/22x22/apps/com.haysell.pos.png",
            "cp -f ./libs/haysell/Icons/logo/20x20.png    /app/share/icons/hicolor/20x20/apps/com.haysell.pos.png",
            "cp -f ./libs/haysell/Icons/logo/16x16.png    /app/share/icons/hicolor/16x16/apps/com.haysell.pos.png"
        ]
      }
    ]
  }